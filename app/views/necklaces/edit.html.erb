<h1> Edit Recipe </h1>
<%= form_tag "necklaces/#{@necklace.id}", method: :patch do %>
  <div class="form-group">
    Name: <input type= "text" <%= @necklace.name %> name="form_name" %>
  </div>
  
  <div class="form-group">
    Description: <input type="text" <%= @necklace.description %> name="form_description" %>
  </div>
  
  <div class="form-group">
    Image: <input type="text" <%= @necklace.image %> name="form_image" %>
  </div>
  
  <div class="form-group">
    Price: <input type="price" <%= @necklace.price %> name="form_price" %>
  </div>

<input type="submit" class="btn btn-primary" value="Update Necklace" %>
<% end %>

<%= form_tag "/necklaces/#{@necklace.id}" , method: :delete do %>
<input type="Submit" value="Destroy necklace">
<% end %>
