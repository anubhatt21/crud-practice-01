<h1>New Necklace</h1>
<%= form_tag "/necklaces", method: :post do %>
  <div class="form-group">
    
  Name: <input type= "text" class="form-control" name="form_name" %>
  </div>
  <div class="form-group">
    
  Description: <input type="text" class="form-control" name="form_description" %>
  </div>
  <div class="form-group">
    
  Image: <input type="text" class="form-control" name="form_image" %>
  </div>
  <div class="form-group">
    
  Price: <input type="price" class="form-control" name="form_price" %>
  </div>
  <input type="submit" class="btn btn-primary" value="Add Necklace" %>
<% end %>

